<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="1dp"
    card_view:cardCornerRadius="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            tools:text="Monday"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            tools:text="Aug 28 2016"/>

        <ImageView
            android:id="@+id/ivStatus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_running"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/date"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivStatus"
            android:layout_alignLeft="@+id/ivStatus"
            tools:text="To-do"/>

        <TextView
            android:id="@+id/tv_status_time_mile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivStatus"
            android:layout_below="@+id/date"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            tools:text="10 min"/>

        <TextView
            android:id="@+id/tvWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_status_time_mile"
            android:layout_alignLeft="@id/tv_status_time_mile"
            tools:text="Workout 1 of 21"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>